<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mall.common.dao.UPermissionMapper" >
  <resultMap id="BaseResultMap" type="com.mall.common.model.UPermission" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="BIGINT" />
    <result column="pid" property="pid" jdbcType="BIGINT" />
    <result column="isHiden" property="isHiden" jdbcType="BIGINT" />
  </resultMap>
  
  
  <sql id="Base_Column_List" >
    id, url, name,type,pid,isHiden
  </sql>
  
  <sql id="limit_sql">
  	   <if test="page_sql != null and page_sql != ''">
      	${page_sql}
      </if>
  </sql>
  
  <sql id="where_all">
  	<where>
  	<if test="findContent != null and findContent !='' " >
        and (
        LOWER(name) like CONCAT("%",#{findContent,jdbcType=VARCHAR},"%") or
        LOWER(url) like CONCAT("%",#{findContent,jdbcType=VARCHAR},"%")
        )
      </if>
      </where>
  </sql>
  
   <resultMap id="PermissionTree" type="com.mall.common.model.UPermission" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="BIGINT" />
    <result column="pid" property="pid" jdbcType="BIGINT" />
    <result column="isHiden" property="isHiden" jdbcType="BIGINT" />
    <result column="userId" property="userId" jdbcType="BIGINT"/>
    <collection property="permissionList" ofType="PermissionTree" column="{pid=id,uid=userId}" 
    javaType="java.util.ArrayList" select="selectPermissionTree"></collection>
  </resultMap>
  
  <!-- 查询一级菜单 -->
  <select id="queryPermissionTreeList" parameterType="java.lang.Long" resultMap="PermissionTree">
  	select
  	<include refid="Base_Column_List" />
  	,#{userId,jdbcType=BIGINT} as userId
  	from sys_permission
  	where isHiden=1 and id in (select id from sys_permission where pid=0 and isHiden=1 and type=0 )
  </select>
  <!-- 递归查询子集 -->
  <select id="selectPermissionTree" parameterType="java.util.Map" resultMap="PermissionTree">
  	select
  	<include refid="Base_Column_List" />
  	,#{uid,jdbcType=BIGINT} as userId
  	from sys_permission where isHiden=1  and pid=#{pid,jdbcType=BIGINT} and type in (0,1)
  	and id in (SELECT	DISTINCT(up.id)FROM	(SELECT	rid	FROM sys_user_role	WHERE uid=#{uid,jdbcType=BIGINT}) uur
	LEFT JOIN sys_role ur ON uur.rid = ur.id
	LEFT JOIN sys_role_permission urp ON urp.rid = ur.id
	LEFT JOIN sys_permission up ON up.id = urp.pid)
  </select>
  
  <select id="findAll" resultMap="BaseResultMap" >
  	 select 
    <include refid="Base_Column_List" />
    from sys_permission 
    <include refid="where_all"/>
    <include refid="limit_sql" />
  </select>
  <select id="findCount" resultMap="BaseResultMap" >
 	 select count(id) from  sys_permission
  	<include refid="where_all" />
  </select>
  <!-- 根据角色获取权限，marker:0,没有权限，marker：非0(和up.id)一致表示有权限。 
  	com.mall.permission.bo.UPermissionBo中的这个方法是校验权限
  	public boolean isCheck(){
		return StringUtils.equals(roleId,marker);
	}
  -->
  <select id="selectPermissionById" resultType="com.mall.permission.bo.UPermissionBo">
  	<!--原来的语句，应该是没错误。
  		有同学说有错误，请给出mysql版本号。
  		但是发现一个问题（我没尝试），在mysql 5.7版本中，没有结果集。故做了一下修改。
		
		2017年5月9日 15:27:46，又换回去了，因为Demo项目的数据库是5.6的，然后这2个语句都可以，你自己切换。
  	 select up.id,ur.id roleId,up.name,up.url,min(ifnull(ur.id,0))marker from sys_permission up
		left join sys_role_permission urp on urp.pid = up.id
		left join (select id from sys_role where id = #{id,jdbcType=BIGINT}) ur on ur.id = urp.rid
		group by up.id
  	 -->
		select up.id,ur.id roleId,up.name,up.url,ifnull(ur.id,0)marker from sys_permission up
		left join sys_role_permission urp on urp.pid = up.id
		left join (select id from sys_role where id = #{id,jdbcType=BIGINT}) ur on ur.id = urp.rid
		group by up.id
	  
	  <!--
		mysql 5.7 请用下面的。来自群内（上海|Java|大力水饺）
		select up.id,ur.id roleId,up.name,up.url,ifnull(ur.id,0)marker from sys_permission up
		right join sys_role_permission urp on urp.pid = up.id
		right join (select id from sys_role where id = 1) ur on ur.id = urp.rid
		group by up.id
	  -->
  </select>
  <!-- 根据用ID查询permission -->
  <select id="findPermissionByUserId" resultType="java.lang.String">
  		select p.url from sys_permission p , sys_role_permission rp, sys_user_role ur 
		where uid =#{id,jdbcType=BIGINT} and p.id = rp.pid and rp.rid = ur.rid
  </select>
  
  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from sys_permission
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from sys_permission
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.mall.common.model.UPermission" >
    insert into sys_permission (id, url, name)
    values (#{id,jdbcType=BIGINT}, #{url,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id" parameterType="com.mall.common.model.UPermission" >
    insert into sys_permission
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="url != null" >
        url,
      </if>
      <if test="name != null" >
        name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=BIGINT},
      </if>
      <if test="url != null" >
        #{url,jdbcType=VARCHAR},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.mall.common.model.UPermission" >
    update sys_permission
    <set >
      <if test="url != null" >
        url = #{url,jdbcType=VARCHAR},
      </if>
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.mall.common.model.UPermission" >
    update sys_permission
    set url = #{url,jdbcType=VARCHAR},
      name = #{name,jdbcType=VARCHAR}
    where id = #{id,jdbcType=BIGINT}
  </update>
</mapper>
